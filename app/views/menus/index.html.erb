<div class="menu-container">
  <div class="row">
    <div class="col-12">
      <%= form_tag(search_path, method: 'get', remote: true) do %>
        <div class="input-group mb-5">
          <div class="col-8">
            <%= text_field_tag :search, '', class: 'form-control', placeholder: 'Search', onkeydown: 'clickSubmit()'%>
          </div>
          <div class="col-4">
            <%= select_tag 'filter', options_for_select(['Select Filter',
              'Dairy Free',
              'Gluten Free',
              'Kosher',
              'Penut Free',
              'Vegan',
              'Vegetarian'
            ]), class: 'custom-select ms-2' %>
            <%= submit_tag 'Search', class: 'btn btn-outline-dark ms-2', id: 'search_submit' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<script>
  function clickSubmit() {
    $("#search_submit").trigger("click");
  }
</script>